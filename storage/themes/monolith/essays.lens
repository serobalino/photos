<koken:include file="layouts/header.html" />

	<section id="main">
		<div class="container">
			<koken:load limit="10" infinite="true">

				<koken:loop>
					<div class="row">
						<div class="col-md-12">
							<article>
								<div class="heading">
									<h1>
										<koken:link>
											{{ essay.title }}
										</koken:link>
									</h1>
									<span>
										<koken:link to="archive">
											<koken:time />
										</koken:link> | 
									</span>
									<span>
										{{ profile.name }}
									</span>
								</div>
								<p>{{ essay.excerpt }}</p>
								<p>
									<koken:link title="{{ essay.title }}">Ver m√°s...</koken:link>
								</p>
							</article>
						</div>
					</div>
				</koken:loop>

			<koken:else>
				<koken:include file="layouts/error.html" />
				<koken:note>
					No published essays found
				</koken:note>
			</koken:load>
			
		</div>
	</section>

<koken:include file="layouts/footer.html" />
									